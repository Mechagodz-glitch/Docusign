generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DocumentStatus {
  draft
  sent
  viewed
  completed
  expired
  declined
}

enum MembershipRole {
  OWNER
  ADMIN
  MEMBER
}

enum RecipientRole {
  viewer
  approver
  signer
}

model User {
  id            String       @id @default(uuid())
  email         String       @unique
  passwordHash  String
  name          String
  memberships   Membership[]
  documents     Document[]   @relation("OwnerDocuments")
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model Workspace {
  id          String        @id @default(uuid())
  name        String
  logoUrl     String?
  memberships Membership[]
  documents   Document[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Membership {
  id          String     @id @default(uuid())
  user        User       @relation(fields: [userId], references: [id])
  userId      String
  workspace   Workspace  @relation(fields: [workspaceId], references: [id])
  workspaceId String
  role        MembershipRole
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Document {
  id            String          @id @default(uuid())
  title         String
  status        DocumentStatus  @default(draft)
  content       Json
  variables     Json            @default(jsonb('{}'))
  workspace     Workspace       @relation(fields: [workspaceId], references: [id])
  workspaceId   String
  owner         User            @relation("OwnerDocuments", fields: [ownerId], references: [id])
  ownerId       String
  isTemplate    Boolean         @default(false)
  recipients    Recipient[]
  activities    Activity[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model Recipient {
  id          String         @id @default(uuid())
  document    Document       @relation(fields: [documentId], references: [id])
  documentId  String
  name        String
  email       String
  role        RecipientRole
  signingUrl  String?
}

model Activity {
  id         String    @id @default(uuid())
  document   Document  @relation(fields: [documentId], references: [id])
  documentId String
  type       String
  message    String
  createdAt  DateTime  @default(now())
}
